---
// You can access the current path using `Astro.url.pathname`
const current = Astro.url.pathname;
---

<nav>
  <ul>
    <li>
      <a href="/" class={current === "/" ? "active" : ""}>Home</a>
    </li>
    <li>
      <a href="/journal" class={current === "/journal" ? "active" : ""}
        >Journal</a
      >
    </li>
    <li>
      <a href="/weloveweb" class={current === "/weloveweb" ? "active" : ""}
        >We Love Web</a
      >
    </li>
    <li>
      <a href="/gallery" class={current === "/gallery" ? "active" : ""}
        >Gallery</a
      >
    </li>
    <li>
      <a href="/other" class={current === "/other" ? "active" : ""}>Other</a>
    </li>
  </ul>
</nav>

<style>
  .active {
    color: var(--black);
    background-color: var(--accent-one);
  }

  .home {
    display: none;
  }

  .nav-wrapper {
    position: sticky;
    top: 2rem;
    display: grid;
    justify-self: center;
    width: fit-content;
  }

  nav {
    display: grid;
    place-items: center;
    width: fit-content;
    --white: rgb(255, 255, 255);
    background-color: var(--white);
    margin: 0 auto;
    border-radius: 8px;
    backdrop-filter: blur(15px);
    box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.22);
    z-index: 100;
  }

  ul {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: center;
  }

  li {
    list-style: "";
    padding: var(--space-three) 0;
    text-wrap: nowrap;
  }

  a {
    text-decoration-line: none;
    margin: var(--space-three);
    padding: var(--space-two);
    border-radius: 10px;
    transition: 0.35s ease-in-out;
  }

  a:hover {
    color: var(--primary);
  }

  a:active {
    scale: 0.95;
  }

  @media (max-width: 21rem) {
    nav {
      overflow: scroll;
      width: 100%;
    }
    li {
      font-size: 14px;
    }
    a {
      text-wrap: nowrap;
    }
  }
</style>
