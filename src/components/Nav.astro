---
// You can access the current path using `Astro.url.pathname`
const current = Astro.url.pathname;
---

<nav>
  <ul>
    <li>
      <a href="/" class={current === "/" ? "active" : ""}>Home</a>
    </li>
    <li>
      <a href="/journal" class={current === "/journal" ? "active" : ""}
        >Journal</a
      >
    </li>
    <li>
      <a href="/weloveweb" class={current === "/weloveweb" ? "active" : ""}
        >We Love Web</a
      >
    </li>
  </ul>
</nav>

<style>
  nav {
    display: grid;
    place-items: center;
    height: 2.5rem;
    width: 95%;
    margin: 0 auto;
    background: hsl(255, 52%, 99%, 20%);
    border-radius: 16px;
    box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
    backdrop-filter: blur(5.5px);
    -webkit-backdrop-filter: blur(15.5px);
    border: 1px solid rgba(255, 255, 255, 0.22);

    position: sticky;
    top: 10px;
  }

  nav ul {
    display: flex;
    flex-direction: row;
  }

  li {
    list-style: "";
    padding: var(--space-three) 0;
    border-radius: 2px;
  }

  @media (max-width: 18em) {
    nav {
      overflow: scroll;
      width: 100%;
    }
    li {
      font-size: 14px;
    }
    a {
      text-wrap: nowrap;
    }
  }

  li:hover {
    background-color: hsl(255, 52%, 99%, 10%);
  }

  li:hover a {
    text-decoration-color: var(--baby-pink);
    text-decoration-thickness: 2px;
  }

  a {
    color: var(--white);
    text-decoration-line: underline;
    text-decoration-thickness: 1.5px;
    margin: var(--space-three);
    padding: var(--space-two);
    border-radius: 4px;
    transition: 0.25s ease-in-out;
  }

  .active {
    text-decoration-color: var(--pink);
    text-decoration-thickness: 3px;
  }
</style>
