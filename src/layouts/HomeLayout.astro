---
import "../styles/global.css";
import { ClientRouter } from "astro:transitions";

interface Props {
  title: string;
}
const current = Astro.url.pathname;

import Footer from "../components/medium/Footer.astro";
import Header from "../components/medium/Header.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Lisa loves web</title>
    <ClientRouter />
  </head>
  <body transition:animate="fade">
    <Header title="Lisa" />

    <a href="/" class={current === "/" ? "hidden" : "back-to"}> back home </a>

    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style>
  body {
    height: 100vh;
    width: 100vw;
  }

  main {
    padding: 1rem 0.5rem;
  }
</style>
