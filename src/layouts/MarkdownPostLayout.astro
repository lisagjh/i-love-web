---
import BaseLayout from "./BaseLayout.astro";
import { Image } from "astro:assets";
const { frontmatter } = Astro.props;
---

<BaseLayout>
  <h1>{frontmatter.title}</h1>

  <p><em>{frontmatter.description}</em></p>

<a href={frontmatter.livesite}>view this project here</a>
  <Image
    src={frontmatter.image.url}
    width="300"
    height="200"
    alt={frontmatter.image.alt}
  />

  <p>{frontmatter.bodytext}</p>

  {
    frontmatter.relatedPosts.length > 0 ? (
      <section class="related-posts">
        <h2>Related Posts</h2>
        <ul>
          {frontmatter.relatedPosts.map((post: string) => (
            <li class="related">
              <a href={`/posts/${post}`}>{post}</a>
            </li>
          ))}
        </ul>
      </section>
    ) : (
      ""
    )
  }

  <slot />
</BaseLayout>

<style>
  img {
    object-fit: cover;
  }

  .related-posts {
    width: fit-content;
    padding: 1rem 0.5rem;
    border: 1px solid var(--accent-one);
    border-radius: 0.1rem;
  }

  h2 {
    font-size: 1.3rem;
  }

  ul {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    width: fit-content;
  }

  li {
    list-style-type: none;
    width: fit-content;
  }

  .related a {
    display: inline-block;
    width: fit-content;
    color: var(--primary-two);
    text-decoration: none;
  }
</style>
