---
import { getCollection } from "astro:content";
import TalkLayout from "../../layouts/TalkLayout.astro";
import Breadcrumb from "../../components/small/Breadcrumb.astro";

// Generate static paths
export async function getStaticPaths() {
  const talkEntries = await getCollection("talks");
  return talkEntries.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<TalkLayout frontmatter={entry.data}>
  <Breadcrumb 
    currentPage={entry.data.title} 
    parentPage={{ title: "We Love Web", url: "/weloveweb" }} 
    hideBreadcrumbs={true} 
  />
  <Content />
</TalkLayout>
